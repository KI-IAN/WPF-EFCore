<Window
    x:Class="WPFEFCore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFEFCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <ListView
            Name="lvUser"
            Margin="10"
            SelectionChanged="lvUser_SelectionChanged">

            <ListView.View>

                <GridView>

                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding StudentId}"
                        Header="Student Id" />

                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding StudentName}"
                        Header="Name" />

                    <GridViewColumn
                        Width="120"
                        DisplayMemberBinding="{Binding StandardId}"
                        Header="Standard Id" />

                </GridView>

            </ListView.View>

        </ListView>


    </Grid>
</Window>
