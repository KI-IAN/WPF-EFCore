<Page
    x:Class="WPFEFCore.NewStudentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFEFCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewStudentPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">



    <StackPanel>

        <StackPanel Margin="10" Orientation="Horizontal">

            <Label Width="100" Content="Student Name" />
            <TextBox x:Name="txtName" Width="300" />

        </StackPanel>

        <StackPanel Margin="10" Orientation="Horizontal">

            <Label Width="100" Content="Standard Id" />
            <TextBox x:Name="txtStandardId" Width="300" />

        </StackPanel>

        <StackPanel Margin="10">
            <Button
                Width="200"
                HorizontalAlignment="Center"
                Click="Button_Click"
                Content="Save" />

        </StackPanel>

    </StackPanel>
</Page>
